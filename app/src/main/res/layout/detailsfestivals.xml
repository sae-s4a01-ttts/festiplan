    <TextView
        android:id="@+id/labelResponsable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/festivalLibelleResponsable"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/responsable"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Nom Prénom email"
        android:textSize="@dimen/textSize"
        android:textColor="@color/white"/>



    <TextView
        android:id="@+id/labelOrganisateurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/festivalLibelleOrganisateurs"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/organisateurs"
        android:layout_width="match_parent"
